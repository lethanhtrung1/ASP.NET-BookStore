@model Category

<section class="container content">
	<ol class="breadcrumb float-sm-right pt-3">
		<li class="breadcrumb-item">
			<a asp-area="Customer" asp-controller="Home" asp-action="Index" style="text-decoration:none;color:#000">Home</a>
		</li>
		<li class="breadcrumb-item">
			<a asp-area="Admin" asp-controller="Category" asp-action="Index" style="text-decoration:none;color:#000">Category</a>
		</li>
		<li class="breadcrumb-item active">Add</li>
	</ol>

	<form method="post" class="mb-5">
		<div class="card">
			<div class="card-header bg-gradient" style="background-color:#39A7FF">
				<div class="row my-2">
					<h2 class="text-white text-center">New Category</h2>
				</div>
			</div>
			<div class="card-body">
				<div asp-validation-summary="None"></div>
				<div class="bs-stepper-content">
					<div id="" class="content row" role="tabpanel" aria-labelledby="logins-part-trigger">
						@* <div class="form-group mb-3">
							<label asp-for="Name"></label>
							<input asp-for="Name" id="category-name" class="form-control mt-1" />
							<span asp-validation-for="Name" class="text-danger"></span>
						</div>

						<div class="form-group mb-3">
							<label asp-for="DisplayOrder"></label>
							<input asp-for="DisplayOrder" id="display-order" class="form-control mt-1" />
							<span asp-validation-for="DisplayOrder" class="text-danger"></span>
						</div> *@

						<div class="form-floating py-2 col-12">
							<input asp-for="Name" id="category-name" class="form-control border-0 shadow" />
							<label asp-for="Name" class="ms-2"></label>
							<span asp-validation-for="Name" class="text-danger" style="font-size:14px"></span>
						</div>

						<div class="form-floating py-2 col-12">
							<input asp-for="DisplayOrder" id="display-order" class="form-control border-0 shadow" />
							<label asp-for="DisplayOrder" class="ms-2"></label>
							<span asp-validation-for="DisplayOrder" class="text-danger" style="font-size:14px"></span>
						</div>

						<div class="row form-group my-md-3">
							<div class="col-6 col-md-3">
								<a asp-area="Admin" asp-controller="Category" asp-action="Index" class="btn btn-danger mr-4 form-control">
									<i class="bi bi-arrow-bar-left"></i>
									Back To List
								</a>
							</div>
							<div class="col-6 col-md-3">
								<button type="submit" class="btn btn-primary form-control">
									<i class="bi bi-check-lg"></i>
									Create
								</button>
							</div>
						</div>

					</div>
				</div>
			</div>
		</div>
	</form>
</section>

@section Scripts {
	@{
		<partial name="_ValidationScriptsPartial" />
	}
}