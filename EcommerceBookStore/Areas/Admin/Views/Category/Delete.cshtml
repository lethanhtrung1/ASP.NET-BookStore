@model Category

<section class="container content">
	<ol class="breadcrumb float-sm-right pt-3">
		<li class="breadcrumb-item">
			<a asp-area="Customer" asp-controller="Home" asp-action="Index" style="text-decoration:none;color:#000">Home</a>
		</li>
		<li class="breadcrumb-item">
			<a asp-area="Admin" asp-controller="Category" asp-action="Index" style="text-decoration:none;color:#000">Category</a>
		</li>
		<li class="breadcrumb-item active">Delete</li>
	</ol>

	<form method="post" class="mb-5">
		<input asp-for="Id" hidden />
		<div class="card">
			<div class="card-header bg-gradient" style="background-color:#FFB534">
				<div class="row my-2">
					<h2 class="text-white text-center">Delete Category</h2>
				</div>
			</div>
			<div class="card-body">
				<div asp-validation-summary="None"></div>
				<div class="bs-stepper-content">
					<div id="" class="content row" role="tabpanel" aria-labelledby="logins-part-trigger">
						<div class="form-floating py-2 col-12">
							<input asp-for="Name" disabled id="category-name" class="form-control border-0 shadow" />
							<label asp-for="Name" class="ms-2"></label>
						</div>

						<div class="form-floating py-2 col-12">
							<input asp-for="DisplayOrder" disabled id="display-order" class="form-control border-0 shadow" />
							<label asp-for="DisplayOrder" class="ms-2"></label>
						</div>

						<div class="row form-group my-md-3">
							<div class="col-6 col-md-3">
								<a asp-area="Admin" asp-controller="Category" asp-action="Index" class="btn btn-secondary mr-4 form-control">
									<i class="bi bi-arrow-bar-left"></i>
									Back To List
								</a>
							</div>
							<div class="col-6 col-md-3">
								<button type="submit" class="btn btn-danger form-control">
									<i class="bi bi-trash"></i>
									Delete
								</button>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</form>
</section>