@model IEnumerable<Product>

<div class="mb-5" style="margin-top:78px">
	<img src="~/images/banner.jpg" class="img-fluid" style="width:100%" />
</div>

<div class="container">
	<div class="row pb-3">
		@foreach (var product in Model) {
			<div class="col-lg-3 col-sm-6">
				<div class="row p-2">
					<div class="col-12 p-1">
						<div class="card border-0 p-3 shadow border-top border-5 rounded">
							@if (product.ProductImages != null && product.ProductImages.Count() > 0) {
								<img src="@product.ProductImages.FirstOrDefault().ImageUrl"
									 style="max-height: 329px; background-size: contain" class="card-img-top rounded" />
							} else {
								<img src="https://placehold.co/500x600/png" class="card-img-top rounded" />
							}
							<div class="card-body pb-0">
								<div class="pl-1">
									<h6 class="text-1 card-title text-dark opacity-75 text-uppercase">@product.Title</h6>
									<h6 class="card-title text-info" style="font-size:13px">by <b>@product.Author</b></h6>
								</div>
								<div class="pl-1 d-flex flex-row-reverse text-warning mb-2" style="font-size:12px">
									<i class="bi bi-star-fill" style="margin-right:2px"></i>
									<i class="bi bi-star-fill" style="margin-right:2px"></i>
									<i class="bi bi-star-fill" style="margin-right:2px"></i>
									<i class="bi bi-star-fill" style="margin-right:2px"></i>
									<i class="bi bi-star-fill" style="margin-right:2px"></i>
								</div>
								<div class="pl-1 pt-2 border-top border-1">
									<div class="d-flex justify-content-between">
										<h6 class="text-danger text-opacity-75 text-center">
											<span>@product.Price100.ToString("c")</span>
										</h6>
										<h6 class="text-dark text-opacity-75 text-center">
											<span class="text-decoration-line-through">
												@product.ListPrice.ToString("c")
											</span>
										</h6>
									</div>
								</div>
							</div>
							<div class="mt-3">
								<a asp-action="Details" asp-route-productId="@product.Id"
								   class="btn text-white bg-gradient border-0 form-control" style="background-color:#FF6D60">
									View Details
								</a>
							</div>
						</div>
					</div>
				</div>
			</div>
		}
	</div>
</div>
